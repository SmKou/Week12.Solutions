@{
    Layout = "_Layout";
}
@model IEnumerable<IdentityRole>

<h1>Roles</h1>
@Html.ActionLink("Create a role", "Create");
<hr/>

<ul>
    @foreach (var role in Model)
    {
        <li>
            <span>@role.Id: @role.Name</span>
            @using (Html.BeginForm("Delete", "Role"))
            {
                @Html.Hidden("roleId", @role.Id)
                <input type="submit" value="Delete" />
            }
        </li>
    }
</ul>